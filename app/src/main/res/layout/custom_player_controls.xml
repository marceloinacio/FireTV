<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background overlay for controls -->
    <View
        android:id="@+id/controls_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:visibility="gone" />

    <!-- Control buttons container -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="afterDescendants"
        android:visibility="gone">

        <!-- Top row: Previous Channel / Skip Back / Play-Pause / Skip Forward / Next Channel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="32dp">

            <!-- Previous Channel Button -->
            <Button
                android:id="@+id/btn_prev_channel"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:background="@drawable/controls_button_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/previous_channel"
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Skip Back 5 seconds Button -->
            <Button
                android:id="@+id/btn_skip_back"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:background="@drawable/controls_button_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/skip_back"
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Play/Pause Button -->
            <Button
                android:id="@+id/btn_play_pause"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="12dp"
                android:background="@drawable/controls_button_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/play_pause"
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Skip Forward 5 seconds Button -->
            <Button
                android:id="@+id/btn_skip_forward"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:background="@drawable/controls_button_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/skip_forward"
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <!-- Next Channel Button -->
            <Button
                android:id="@+id/btn_next_channel"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:background="@drawable/controls_button_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/next_channel"
                android:textColor="@color/text_primary"
                android:textSize="10sp"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <!-- Current playing info at bottom -->
        <TextView
            android:id="@+id/controls_current_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>
</FrameLayout>
