<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background overlay for controls -->
    <View
        android:id="@+id/controls_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:visibility="gone" />

    <!-- Control buttons container -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <!-- Top row: Previous Channel / Skip Back / Play-Pause / Skip Forward / Next Channel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="32dp">

            <!-- Previous Channel Button -->
            <ImageButton
                android:id="@+id/btn_prev_channel"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_skip_previous"
                android:contentDescription="@string/previous_channel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:tint="@color/text_primary" />

            <!-- Skip Back 5 seconds Button -->
            <ImageButton
                android:id="@+id/btn_skip_back"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_replay_5"
                android:contentDescription="@string/skip_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:tint="@color/text_primary" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_play"
                android:contentDescription="@string/play_pause"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:tint="@color/text_primary" />

            <!-- Skip Forward 5 seconds Button -->
            <ImageButton
                android:id="@+id/btn_skip_forward"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_forward_5"
                android:contentDescription="@string/skip_forward"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:tint="@color/text_primary" />

            <!-- Next Channel Button -->
            <ImageButton
                android:id="@+id/btn_next_channel"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_skip_next"
                android:contentDescription="@string/next_channel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:tint="@color/text_primary" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
